{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.AspNetCore.Hosting": "Information",
      "Microsoft.AspNetCore.Routing": "Information",
      "Microsoft.AspNetCore.Authentication": "Debug",
      "Microsoft.AspNetCore.Authorization": "Debug",
      "Microsoft.Identity": "Debug",
      "Microsoft.Identity.Web": "Debug",
      "Microsoft.Extensions.Http": "Information",
      "System.Net.Http": "Information",
      "Yarp": "Debug",
      "Yarp.ReverseProxy": "Debug",
      "Yarp.ReverseProxy.Health": "Debug",
      "InternationalCenter": "Debug",
      "InternationalCenter.Gateway.Admin": "Debug",
      "InternationalCenter.Shared": "Debug",
      "Gateway.Admin": "Debug",
      "Infrastructure.Metrics": "Debug",
      "Service.Audit": "Debug",
      "Microsoft.EntityFrameworkCore": "Information",
      "Microsoft.EntityFrameworkCore.Database": "Information"
    },
    "Console": {
      "IncludeScopes": true,
      "TimestampFormat": "HH:mm:ss.fff "
    }
  },
  "AdminAllowedOrigins": [
    "http://localhost:3000",
    "https://localhost:3000"
  ],
  "Audit": {
    "EnableAuditing": true,
    "AuditCreates": true,
    "AuditUpdates": true,
    "AuditDeletes": true,
    "AuditReads": false,
    "MaxRetentionDays": 30,
    "EncryptSensitiveData": false,
    "BatchSize": 100,
    "EnableArchiving": false,
    "ExcludedProperties": [ "UpdatedAt", "LastAccessed" ],
    "SensitiveProperties": [
      "Password", "Token", "Secret", "Key", "Hash",
      "SSN", "TaxId", "CreditCard", "BankAccount",
      "Phone", "Email"
    ]
  },
  "EntraExternalId": {
    "Instance": "https://login.microsoftonline.com/",
    "Domain": "internationalcenter.onmicrosoft.com",
    "CallbackPath": "/signin-oidc",
    "SignedOutCallbackPath": "/signout-callback-oidc"
  },
  "Security": {
    "RequireHttps": false,
    "MaxRequestSizeBytes": 10485760,
    "BlockedIpAddresses": [],
    "AdminAllowedIpAddresses": [],
    "RateLimitingEnabled": true
  },
  "ReverseProxy": {
    "Clusters": {
      "services-admin-cluster": {
        "Destinations": {
          "services-admin-api": {
            "Address": "http://localhost:7241"
          }
        },
        "HttpRequest": {
          "Timeout": "00:02:00"
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:15",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      }
    }
  },
  "Metrics": {
    "Enabled": true,
    "MetricsPath": "/metrics",
    "ServiceName": "Gateway-Admin-Dev",
    "ServiceVersion": "0.1.0-dev",
    "Environment": "Development",
    "ExportInterval": "00:00:05",
    "ExportTimeout": "00:00:15",
    "EnableGzip": false,
    "MaxConcurrentExports": 5,
    "Security": {
      "EnableSecurity": false,
      "AllowedIps": [
        "127.0.0.1",
        "::1",
        "localhost"
      ],
      "RequireAuthentication": false,
      "AuthenticationScheme": null,
      "EnableRateLimiting": false,
      "MaxRequestsPerMinute": 1000,
      "LogSecurityEvents": true,
      "EnableSecurityHeaders": false,
      "IpBlockDuration": "00:01:00"
    },
    "Prometheus": {
      "ExporterType": "AspNetCore",
      "EnableOpenMetrics": true,
      "AdditionalLabels": ["developer"],
      "StaticLabels": {
        "service": "gateway-admin",
        "gateway_type": "admin",
        "compliance_level": "medical_grade",
        "environment": "dev",
        "cluster": "local"
      },
      "IncludeTargetInfo": true,
      "ExternalUrl": null,
      "ScrapeConfigRefreshInterval": "00:01:00"
    },
    "ServiceDiscovery": {
      "EnableAutoDiscovery": true,
      "DiscoveryMethod": "Aspire",
      "DiscoveryInterval": "00:00:30",
      "StaticEndpoints": null,
      "DefaultLabels": {
        "cluster": "development",
        "region": "local",
        "compliance_level": "medical_grade"
      },
      "GeneratePrometheusConfig": true,
      "PrometheusConfigPath": "/tmp/gateway-admin-prometheus.yml"
    },
    "CustomMetrics": {
      "EnableCustomMetrics": true,
      "MeterName": "Gateway.Admin.Development",
      "MeterVersion": "0.1.0-dev",
      "MaxCustomMetrics": 1000,
      "ValidateMetricNames": false,
      "MetricPrefixes": ["gateway_admin_", "dev_", "test_"],
      "MetricRetention": "00:10:00"
    },
    "Performance": {
      "EnablePerformanceMetrics": true,
      "MetricsBufferSize": 1000,
      "MetricsFlushInterval": "00:00:02",
      "EnableCompression": false,
      "MaxResponseSize": 10485760,
      "EnableCaching": false,
      "CacheDuration": "00:00:05"
    }
  }
}