// Company sections organized by category
const companyCategories = [
  {
    title: 'Leadership & Team',
    description: 'Meet our experienced medical professionals and leadership team',
    items: [
      {
        name: 'About Our Team',
        href: '/company/team',
        description: 'Meet our board-certified physicians and medical team',
        icon: 'üë®‚Äç‚öïÔ∏è',
      },
      {
        name: 'Credentials',
        href: '/company/credentials',
        description: 'Our certifications, accreditations, and professional memberships',
        icon: 'üèÜ',
      },
    ],
  },
  {
    title: 'Careers & Contact',
    description: 'Join our team or get in touch with our medical professionals',
    items: [
      {
        name: 'Careers',
        href: '/company/careers',
        description: 'Join our team of healthcare professionals',
        icon: 'üíº',
      },
      {
        name: 'Contact Us',
        href: '/company/contact',
        description: 'Get in touch with our medical team',
        icon: 'üìû',
      },
    ],
  },
  {
    title: 'News & Research',
    description: 'Stay informed with our latest developments and research',
    items: [
      {
        name: 'News & Research',
        href: '/company/news',
        description: 'Latest news, research, and medical breakthroughs',
        icon: 'üì∞',
      },
    ],
