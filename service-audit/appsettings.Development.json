{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=international_center_dev;Username=postgres;Password=postgres"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore": "Information",
      "Service.Audit": "Debug"
    }
  },
  "AuditService": {
    "Enabled": true,
    "RequireSignatures": true,
    "SigningAlgorithm": "HMACSHA256",
    "SigningKey": "development-signing-key-not-for-production",
    "LogReadOperations": true,
    "LogSystemEvents": true,
    "MaxAuditRetentionDays": 90,
    "EnableBackgroundCleanup": false,
    "CleanupInterval": "1.00:00:00",
    "BatchSize": 100,
    "DefaultTimeout": "00:00:10"
  }
}