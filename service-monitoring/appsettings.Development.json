{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=international_center_dev;Username=postgres;Password=postgres",
    "Redis": "localhost:6379"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore": "Information",
      "Service.Monitoring": "Debug"
    }
  },
  "Monitoring": {
    "Enabled": true,
    "HealthCheckPath": "/health",
    "ReadinessPath": "/health/ready",
    "LivenessPath": "/health/live",
    "HealthCheckTimeout": "00:00:10",
    "HealthCheckInterval": "00:00:30",
    "DetailedErrors": true,
    "CacheResults": false,
    "CacheDuration": "00:00:10",
    "Database": {
      "Enabled": true,
      "ConnectionString": "Host=localhost;Database=international_center_dev;Username=postgres;Password=postgres",
      "Timeout": "00:00:03",
      "TestQuery": "SELECT 1",
      "CheckMigrations": false,
      "MaxRetryAttempts": 1,
      "RetryDelay": "00:00:00.500"
    },
    "Redis": {
      "Enabled": true,
      "ConnectionString": "localhost:6379",
      "Timeout": "00:00:03",
      "TestKey": "dev-health-check",
      "TestValue": "ok",
      "MaxRetryAttempts": 1,
      "RetryDelay": "00:00:00.500"
    },
    "Metrics": {
      "Enabled": true,
      "MeterName": "Service.Monitoring.Development",
      "CollectSystemMetrics": true,
      "CollectDatabaseMetrics": true,
      "CollectRedisMetrics": true,
      "CollectionInterval": "00:00:05"
    }
  },
  "Metrics": {
    "Enabled": true,
    "MetricsPath": "/metrics",
    "ServiceName": "Service-Monitoring-Dev",
    "ServiceVersion": "0.1.0-dev",
    "Environment": "Development",
    "ExportInterval": "00:00:05",
    "ExportTimeout": "00:00:15",
    "EnableGzip": false,
    "MaxConcurrentExports": 5,
    "Security": {
      "EnableSecurity": false,
      "AllowedIps": [
        "127.0.0.1",
        "::1",
        "localhost"
      ],
      "RequireAuthentication": false,
      "AuthenticationScheme": null,
      "EnableRateLimiting": false,
      "MaxRequestsPerMinute": 1000,
      "LogSecurityEvents": true,
      "EnableSecurityHeaders": false,
      "IpBlockDuration": "00:01:00"
    },
    "Prometheus": {
      "ExporterType": "AspNetCore",
      "EnableOpenMetrics": true,
      "AdditionalLabels": ["developer"],
      "StaticLabels": {
        "service": "service-monitoring",
        "environment": "dev",
        "cluster": "local"
      },
      "IncludeTargetInfo": true,
      "ExternalUrl": null,
      "ScrapeConfigRefreshInterval": "00:01:00"
    },
    "ServiceDiscovery": {
      "EnableAutoDiscovery": true,
      "DiscoveryMethod": "Aspire",
      "DiscoveryInterval": "00:00:30",
      "StaticEndpoints": null,
      "DefaultLabels": {
        "cluster": "development",
        "region": "local"
      },
      "GeneratePrometheusConfig": true,
      "PrometheusConfigPath": "/tmp/service-monitoring-prometheus.yml"
    },
    "CustomMetrics": {
      "EnableCustomMetrics": true,
      "MeterName": "Service.Monitoring.Development",
      "MeterVersion": "0.1.0-dev",
      "MaxCustomMetrics": 500,
      "ValidateMetricNames": false,
      "MetricPrefixes": ["dev_", "test_"],
      "MetricRetention": "00:10:00"
    },
    "Performance": {
      "EnablePerformanceMetrics": true,
      "MetricsBufferSize": 1000,
      "MetricsFlushInterval": "00:00:02",
      "EnableCompression": false,
      "MaxResponseSize": 10485760,
      "EnableCaching": false,
      "CacheDuration": "00:00:05"
    }
  }
}