{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.AspNetCore.Hosting": "Information",
      "Microsoft.AspNetCore.Routing": "Information",
      "Microsoft.AspNetCore.Authentication": "Debug",
      "Microsoft.AspNetCore.Authorization": "Debug",
      "Microsoft.Extensions.Http": "Information",
      "System.Net.Http": "Information",
      "Yarp": "Debug",
      "Yarp.ReverseProxy": "Debug",
      "Yarp.ReverseProxy.Health": "Debug",
      "InternationalCenter": "Debug",
      "InternationalCenter.Gateway.Public": "Debug",
      "InternationalCenter.Shared": "Debug"
    },
    "Console": {
      "IncludeScopes": true,
      "TimestampFormat": "HH:mm:ss.fff "
    }
  },
  "PublicAllowedOrigins": [
    "http://localhost:4321",
    "https://localhost:4321"
  ],
  "Security": {
    "RequireHttps": false,
    "MaxRequestSizeBytes": 10485760,
    "BlockedIpAddresses": [],
    "RateLimitingEnabled": true
  },
  "ReverseProxy": {
    "Clusters": {
      "services-public-cluster": {
        "Destinations": {
          "services-public-api": {
            "Address": "http://localhost:7240"
          }
        },
        "HttpRequest": {
          "Timeout": "00:02:00"
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:15",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      }
    }
  },
  "Metrics": {
    "Enabled": true,
    "MetricsPath": "/metrics",
    "ServiceName": "Gateway-Public-Dev",
    "ServiceVersion": "0.1.0-dev",
    "Environment": "Development",
    "ExportInterval": "00:00:05",
    "ExportTimeout": "00:00:15",
    "EnableGzip": false,
    "MaxConcurrentExports": 5,
    "Security": {
      "EnableSecurity": false,
      "AllowedIps": [
        "127.0.0.1",
        "::1",
        "localhost"
      ],
      "RequireAuthentication": false,
      "AuthenticationScheme": null,
      "EnableRateLimiting": false,
      "MaxRequestsPerMinute": 1000,
      "LogSecurityEvents": true,
      "EnableSecurityHeaders": false,
      "IpBlockDuration": "00:01:00"
    },
    "Prometheus": {
      "ExporterType": "AspNetCore",
      "EnableOpenMetrics": true,
      "AdditionalLabels": ["developer"],
      "StaticLabels": {
        "service": "gateway-public",
        "gateway_type": "public",
        "environment": "dev",
        "cluster": "local"
      },
      "IncludeTargetInfo": true,
      "ExternalUrl": null,
      "ScrapeConfigRefreshInterval": "00:01:00"
    },
    "ServiceDiscovery": {
      "EnableAutoDiscovery": true,
      "DiscoveryMethod": "Aspire",
      "DiscoveryInterval": "00:00:30",
      "StaticEndpoints": null,
      "DefaultLabels": {
        "cluster": "development",
        "region": "local"
      },
      "GeneratePrometheusConfig": true,
      "PrometheusConfigPath": "/tmp/gateway-public-prometheus.yml"
    },
    "CustomMetrics": {
      "EnableCustomMetrics": true,
      "MeterName": "Gateway.Public.Development",
      "MeterVersion": "0.1.0-dev",
      "MaxCustomMetrics": 500,
      "ValidateMetricNames": false,
      "MetricPrefixes": ["gateway_public_", "dev_", "test_"],
      "MetricRetention": "00:10:00"
    },
    "Performance": {
      "EnablePerformanceMetrics": true,
      "MetricsBufferSize": 1000,
      "MetricsFlushInterval": "00:00:02",
      "EnableCompression": false,
      "MaxResponseSize": 10485760,
      "EnableCaching": false,
      "CacheDuration": "00:00:05"
    }
  }
}