{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=international_center;Username=postgres;Password=postgres"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Service.Audit": "Debug"
    },
    "Console": {
      "LogToStandardErrorThreshold": "Error"
    }
  },
  "AuditService": {
    "Enabled": true,
    "RequireSignatures": true,
    "SigningAlgorithm": "HMACSHA256",
    "SigningKey": "your-secret-signing-key-change-in-production",
    "LogReadOperations": false,
    "LogSystemEvents": true,
    "MaxAuditRetentionDays": 2555,
    "EnableBackgroundCleanup": true,
    "CleanupInterval": "30.00:00:00",
    "BatchSize": 1000,
    "DefaultTimeout": "00:00:30"
  }
}