---
import Layout from '../../layouts/Layout.astro';
import DonationForms from '../../components/DonationForms.vue';
import PageHero from '../../components/PageHero.astro';
---

<Layout
  title="Support Our Mission - International Center | Donations for Clinic Development"
  description="Support the creation and improvement of our regenerative medicine clinic. Your donations help us advance patient care and expand access to innovative treatments."
>
  <main>
    <!-- Hero Section -->
    <PageHero
      title="Support Our Mission"
      description="Help us create and improve our regenerative medicine clinic to serve more patients in need"
      showBottomMargin={true}
    />

    <!-- Donation Forms -->
    <section class="pt-16 pb-20 bg-gray-50">
      <div class="container">
        <!-- Donation forms - Interactive but below hero, load when visible -->
        <DonationForms client:visible />
      </div>
    </section>

    <!-- Fund Allocation - Horizontal Bar Layout -->
    <section class="pt-16 pb-20 bg-gray-50">
      <div class="container">
        <div class="text-center mb-16">
          <h2 class="text-3xl font-semibold lg:text-5xl mb-4">Fund Allocation</h2>
        </div>

        <div class="max-w-5xl mx-auto">
          <div class="space-y-8">
            <!-- Research & Development -->
            <div class="flex items-center gap-8">
              <div class="w-24 flex-shrink-0 text-right">
                <div class="text-3xl font-bold">50%</div>
              </div>
              <div class="flex-1">
                <div class="mb-2">
                  <h3 class="text-lg font-semibold">Research & Development</h3>
                  <p class="text-gray-600 text-sm">Clinical research, protocol development, and innovation in regenerative medicine treatments</p>
                </div>
                <div class="w-full bg-gray-200 rounded-sm h-3">
                  <div class="bg-black h-3 rounded-sm" style="width: 50%"></div>
                </div>
              </div>
            </div>

            <!-- Community Programs -->
            <div class="flex items-center gap-8">
              <div class="w-24 flex-shrink-0 text-right">
                <div class="text-3xl font-bold">30%</div>
              </div>
              <div class="flex-1">
                <div class="mb-2">
                  <h3 class="text-lg font-semibold">Community Programs</h3>
                  <p class="text-gray-600 text-sm">Education initiatives, public health outreach, and community wellness programs</p>
                </div>
                <div class="w-full bg-gray-200 rounded-sm h-3">
                  <div class="bg-gray-800 h-3 rounded-sm" style="width: 30%"></div>
                </div>
              </div>
            </div>

            <!-- Patient Care -->
            <div class="flex items-center gap-8">
              <div class="w-24 flex-shrink-0 text-right">
                <div class="text-3xl font-bold">15%</div>
              </div>
              <div class="flex-1">
                <div class="mb-2">
                  <h3 class="text-lg font-semibold">Patient Care</h3>
                  <p class="text-gray-600 text-sm">Direct patient services and treatment delivery</p>
                </div>
                <div class="w-full bg-gray-200 rounded-sm h-3">
                  <div class="bg-gray-600 h-3 rounded-sm" style="width: 15%"></div>
                </div>
              </div>
            </div>

            <!-- Administration -->
            <div class="flex items-center gap-8">
              <div class="w-24 flex-shrink-0 text-right">
                <div class="text-3xl font-bold">5%</div>
              </div>
              <div class="flex-1">
                <div class="mb-2">
                  <h3 class="text-lg font-semibold">Administration</h3>
                  <p class="text-gray-600 text-sm">General operations and oversight costs</p>
                </div>
                <div class="w-full bg-gray-200 rounded-sm h-3">
                  <div class="bg-gray-400 h-3 rounded-sm" style="width: 5%"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Activity & Impact Navigation -->
    <section class="pt-16 pb-20">
      <div class="container">
        <div class="text-center mb-16">
          <h2 class="text-3xl font-semibold lg:text-5xl mb-4">See Our Impact</h2>
        </div>

        <div class="max-w-4xl mx-auto">
          <!-- Navigation cards -->
          <div class="grid gap-8 lg:grid-cols-2">
            <!-- Research Hub Card -->
            <a href="/community/research" class="group block">
              <div class="bg-white p-8 rounded-sm border border-gray-200 transition-all duration-200 group-hover:shadow-lg group-hover:border-gray-300">
                <div class="mb-6">
                  <div class="w-16 h-16 bg-black rounded-sm flex items-center justify-center mb-4">
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                    </svg>
                  </div>
                  <h3 class="text-2xl font-semibold mb-4 group-hover:text-gray-700">Research Hub</h3>
                  <p class="text-gray-600 mb-6">
                    Explore our latest research breakthroughs, clinical trials, and scientific publications 
                    advancing regenerative medicine.
                  </p>
                </div>
                
                <div class="space-y-3 text-sm text-gray-600 mb-6">
                  <div class="flex items-center">
                    <span class="w-2 h-px bg-black mr-3 mt-0.5 flex-shrink-0"></span>
                    Latest study results and findings
                  </div>
                  <div class="flex items-center">
                    <span class="w-2 h-px bg-black mr-3 mt-0.5 flex-shrink-0"></span>
                    Clinical trial progress updates
                  </div>
                  <div class="flex items-center">
                    <span class="w-2 h-px bg-black mr-3 mt-0.5 flex-shrink-0"></span>
                    Published research articles
                  </div>
                  <div class="flex items-center">
                    <span class="w-2 h-px bg-black mr-3 mt-0.5 flex-shrink-0"></span>
                    Partnership announcements
                  </div>
                </div>

                <div class="flex items-center text-sm font-medium group-hover:text-gray-700">
                  View Research Activities
                  <svg class="w-4 h-4 ml-2 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
              </div>
            </a>

            <!-- News Hub Card -->
            <a href="/company/news" class="group block">
              <div class="bg-white p-8 rounded-sm border border-gray-200 transition-all duration-200 group-hover:shadow-lg group-hover:border-gray-300">
                <div class="mb-6">
                  <div class="w-16 h-16 bg-gray-800 rounded-sm flex items-center justify-center mb-4">
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                    </svg>
                  </div>
                  <h3 class="text-2xl font-semibold mb-4 group-hover:text-gray-700">News & Updates</h3>
                  <p class="text-gray-600 mb-6">
                    Stay informed with the latest company news, patient success stories, and industry 
                    developments in regenerative medicine.
                  </p>
                </div>
                
                <div class="space-y-3 text-sm text-gray-600 mb-6">
                  <div class="flex items-center">
                    <span class="w-2 h-px bg-black mr-3 mt-0.5 flex-shrink-0"></span>
                    Patient success stories
                  </div>
                  <div class="flex items-center">
                    <span class="w-2 h-px bg-black mr-3 mt-0.5 flex-shrink-0"></span>
                    Company announcements
                  </div>
                  <div class="flex items-center">
                    <span class="w-2 h-px bg-black mr-3 mt-0.5 flex-shrink-0"></span>
                    Industry news & trends
                  </div>
                  <div class="flex items-center">
                    <span class="w-2 h-px bg-black mr-3 mt-0.5 flex-shrink-0"></span>
                    Media coverage & press
                  </div>
                </div>

                <div class="flex items-center text-sm font-medium group-hover:text-gray-700">
                  Read Latest News
                  <svg class="w-4 h-4 ml-2 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
              </div>
            </a>
          </div>

        </div>
      </div>
    </section>

  </main>
</Layout>